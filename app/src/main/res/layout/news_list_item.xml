<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/list_touch_selector"
    android:padding="3dp">


    <ImageView
        android:id="@+id/imageView_news_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/forbes_default"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView_news_title"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_news_image"
        android:layout_toRightOf="@+id/imageView_news_image"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="3"

        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView_news_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_news_title"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="5"
        android:text="New Text"
        android:textColor="#000" />

</RelativeLayout>